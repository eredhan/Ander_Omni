<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.spectruminnovations.www.storyboard.Page1"
    android:id="@+id/page_one_layout"
    android:background="@color/secondary_text_default_material_dark">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@android:drawable/ic_dialog_map"
        android:minWidth="200dp"
        android:minHeight="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />o

    <TextView android:text="Hi there,     \n\nEach page of this App demonstrates another capability that you can use for your apps. In order to follow this, please fork the project from GitHub, and then use &apos;Import from VCS&apos; (or the equivalent for the command line) in order to get your own copy of this code into your editor.     \n\nThis page shows how to use &apos;intents&apos; to move to another page, click the button below to proceed.     "
     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to Page 2"
        android:id="@+id/page_1_button"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />


</RelativeLayout>
